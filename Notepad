from tkinter import *
root=Tk()
root.geometry("350x300")
root.title("Notepad")
root.config(bg="ghost white")

menubar=Menu(root)
hm=Menu(menubar,tearoff=0)
fm=Menu(menubar,tearoff=0)
fn=Menu(menubar,tearoff=0)
gm=Menu(menubar,tearoff=0)
gn=Menu(menubar,tearoff=0)
menubar.add_cascade(label="File",menu=fm)
fm.add_command(label="New")
fm.add_command(label="New Window")
fm.add_command(label="Open")
fm.add_command(label="Save")
fm.add_command(label="Save As")
fm.add_separator()
fm.add_command(label="Page")
fm.add_command(label="Page Setup")
fm.add_separator()
fm.add_command(label="Exit")

menubar.add_cascade(label="Edit",menu=hm)
hm.add_command(label="Undo")
hm.add_separator()
hm.add_command(label="Cut")
hm.add_command(label="Copy")
hm.add_command(label="Paste")
hm.add_command(label="Delete")
hm.add_separator()
hm.add_command(label="Search with Bing")
hm.add_command(label="Find")
hm.add_command(label="Find Next")
hm.add_command(label="Find Previous")
hm.add_command(label="Replace")
hm.add_command(label="Go to")
hm.add_separator()
hm.add_command(label="Select All")
hm.add_command(label="Time/Date")

menubar.add_cascade(label="Format",menu=fn)
fn.add_command(label="Word Wrap")
fn.add_command(label="Font...")

menubar.add_cascade(label="View",menu=gm)
gm.add_command(label="Zoom")
gm.add_command(label="Status Bar")

menubar.add_cascade(label="Help",menu=gn)
gn.add_command(label="View Help")
gn.add_command(label="Send Feedback")
gn.add_separator()
gn.add_command(label="About Notepad")

root.config(menu=menubar)
root.mainloop()
